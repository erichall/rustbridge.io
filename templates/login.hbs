<!doctype html>
<html>
    <head>
        <title>{{title}}</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="/static/styles.css"/>
        <link rel="icon" href="/favicon.ico" type="image/x-icon">
    </head>
    <body class="text-center">

        <div id="login-wrapper">
            <img class="mb-4" src="/static/img/farris.png" height="70%">
            <h1 class="h3 mb-3 font-weight-normal">Please log in</h1>
            {{#if flash}}
              <p>{{ flash }}</p>
            {{/if}}
            <form id="login-form" method="POST" action="/login" class="form-signin">
                <label for="email" class="sr-only"></label>
                <input type="email" title="email"  class="form-control" placeholder="email" name="email" required autofocus/>
                <br>
                <label for="password" class="sr-only">Password</label>
                <input type="password" title="password"  class="form-control"  placeholder="password" name="password" required/>
                <br>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
                <a class="forgot" href="forgot_username">Forgot Username?</a>
            </form>
        </div>
    </body>
</html>
