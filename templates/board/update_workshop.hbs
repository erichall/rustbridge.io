<div id="workshop-wrapper">

  <form method="POST" action="/dashboard/update-workshop" >
    <input class="hidden" for="model-id" type="text" value={{{ id }}} name="model_id">
    <div class="post-workshop-container-container">
      <h1>Update Workshop</h1>
      <p>Update Workshop Details</p>
      <br>
      <label  class="sr-only" for="workshop-name">Workshop name</label>
      <input  class="form-control" type="text" value={{{ current_name }}} name="name" >
      <br> 
      <label  class="sr-only" for="workshop-description">Description</label>
      <input  class="form-control" type="text" value={{{ current_desc }}} name="description" >
      <br>
      <label  class="sr-only" for="workshop-location">Location</label>
      <input  class="form-control" type="text" value={{{ current_loc }}} name="location" >
      <br>
      <label  class="sr-only" for="workshop-date">Date</label>
      <input  class="form-control" type="date" value={{{ current_date }}} name="date" >
      <br>
      <label  class="sr-only" for="workshop-starttime">Start time</label>
      <input  class="form-control" type="text"
                                   pattern="([01]?[0-9]|2[0-3]):[0-5][0-9]"
                                   value={{{ current_start_time }}} name="start_time" >
      <br>
      <label  class="sr-only" for="workshop-endtime">End time</label>
      <input  class="form-control" type="text"
                                   pattern="([01]?[0-9]|2[0-3]):[0-5][0-9]"
                                   value={{{ current_end_time }}} name="end_time" >
      <br>
      <label  class="sr-only" for="workshop-is-private">Private</label>
      <input  class="form-control" type="checkbox" value={{{ current_private }}} name="private" >
      <br>

      <div class="clearfix">
        <button type="button" class="cancelbtn">Cancel</button>
        <button type="submit" class="postbtn">Update</button>
      </div>
    </div>
  </form>

</div>
